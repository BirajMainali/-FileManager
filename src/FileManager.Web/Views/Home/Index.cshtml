@model List<FileManager.Domain.Entities.FileRecordInfo>

@{
    ViewBag.Title = "Images";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3 p-2">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title"> @item.Name &bull; @item.Size KB</div>
                    </div>
                    <div class="card-body">
                        <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Remove</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>