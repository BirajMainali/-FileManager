@model FileManager.Web.ViewModels.FileUploadVm

@{
    ViewBag.Title = "File Upload";
    Layout = "_Layout";
}

<div class="card col-8 mx-auto">
    <div class="card-header">
        <div class="card-title">Add File</div>
    </div>
    <div class="card-body">
        <form asp-action="New" asp-controller="Home" method="post" enctype="multipart/form-data">
            <div class="from-group">
                <label asp-for="FileName"></label>
                <input type="text" asp-for="FileName"  id="name" class="form-control">
            </div>
            <div class="mt-3">
                <label asp-for="File"></label>
                <input class="form-control" type="file" asp-for="File" id="formFile">
            </div>
            <div class="form-group mt-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            </div>
            <div class="btn-group mt-3">
                <button type="submit" class="btn btn-primary btn-sm">Upload</button>
            </div>
        </form>
    </div>
</div>
